<survey>
	<survey-name>Participant Intake Form</survey-name>
	<page>
		<html>
			<![CDATA[
				<h1>New Participant Intake Form</h1>
				<img src="logo.png" />
				<p>This is a form for entering a new participant for the PROJECT project.</p>
			]]>
		</html>
		<question-group id="Name">
			<template src="name.blade.php" />
			<question name="FirstName"  required="1" data-format="varchar">
				<question-text>First Name:</question-text>
				<template src="text-plain.blade.php" />
			</question>
			<question name="LastName" required="1" data-format="varchar">
				<question-text>Last Name:</question-text>
				<template src="text-plain.blade.php" />
			</question>
		</question-group>
		<question name="Phone" required="1" data-format="varchar">
			<question-text>Phone:</question-text>
		</question>
		<question-group id="Address">
			<question name="Street1" required="1" data-format="varchar">
				<question-text>Street 1:</question-text>
			</question>
			<question name="Street2" required="1" data-format="varchar">
				<question-text>Street 2:</question-text>
			</question>
			<question name="City" required="1" data-format="varchar">
				<question-text>City:</question-text>
			</question>
			<multiple-choice name="State" required="1" num-selectable="1" data-format="varchar">
				<question-text>State:</question-text>
				<template>
					<src>select</src>
				</template>
				<option value="NY" label="New York" selected="1" />
				<data-source class="StatesController" method='StatesList' />
			</multiple-choice>
			<question name="Zip" required="1" data-format="int">
				<question-text>Zip:</question-text>
			</question>
		</question-group>
		<!-- Is data-format redundant here? Can it be optional? -->
		<date name="DOB" required="1" data-format="date">
			<question-text>Date of Birth:</question-text>
		</date>
		<question-group id="insurance">
			<!-- Choose a default template based on num-seleted -->
			<multiple-choice name="insurance" num-selectable="all">
				<template src="checkgroup-default.blade.php" />
				<options>
					<option id="medicare">
						<label>Medicare</label>
						<value>1</value>
						<template src="checkbox-default.blade.php" />
					</option>
					<option id="medicaid">
						<label>Medicaid</label>
						<value>1</value>
						<template src="checkbox-default.blade.php" />
					</option>
				</options>
			</multiple-choice>
			<question name="medicareNum" id="medicareNum" hidden="true">
				<question-text>Medicare Number:</question-text>
			</question>
			<question name="medicaidNum" id="medicaidNum" hidden="true">
				<question-text>Medicaid Number:</question-text>
			</question>
		</question-group>
		<logic>
			<skip>
				<trigger>
					<condition id="medicare" operator="=" value="1" />
				</trigger>
				<targets>
					<target id="medicareNumber" action="show" /> 
				</targets>
			</skip>
			<skip>
				<trigger>
					<condition id="medicaid" operator="=" value="1" />
				</trigger>
				<targets>
					<target id="medicaidNumber" action="show" /> 
				</targets>
			</skip>
		</logic>
	</page>
</survey>